<%- include('partials/head.ejs') %>

<body>
    <%- include('partials/header.ejs') %>
    <main>
        <section class="textForAdding">
            <a href="" id="toggle-btn">ADD YOUR PROFILE</a>
        </section>
        <hr class="line">
        <section id="showForm">
            <form action="/addProfile" method="POST" class="forms">
                <input type="text" name="name" id="name" placeholder="name">
                <input type="text" name="author_url" id="author_url" placeholder="author_url">
                <input type="text" name="strength" id="strength" placeholder="strength">
                <textarea name="request" id="request" cols="30" rows="10" placeholder="intro"></textarea>
                <input type="submit" value="submit" class="btn">
            </form>
            <hr class="line">
        </section>
        <section>

        </section>
        <script>
            const showForm = document.getElementById("showForm")
            const toggleBtn = document.getElementById("toggle-btn")
            toggleBtn.addEventListener("click", (e) => {
                e.preventDefault()
                showForm.classList.toggle('hide')
            })
        </script>
    </main>

</body>

</html>